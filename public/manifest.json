{
    "name": "Moodle Reloader for QU",
    "version": "2.0.4",
    "manifest_version": 2,
    "icons": {
       "128": "icon128.png",
       "32": "icon32.png",
       "48": "icon48.png"
    },
    "description": "This extension reload Moodle page when the course start.",
    "permissions": [
        "storage",
        "alarms",
        "tabs"
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
   },
    "background": {
        "scripts": ["event/event.bundle.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "32": "icon32.png"
        },
        "default_title": "Moodle Reloader",
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [{
        "matches": ["https://moodle.s.kyushu-u.ac.jp/*"],
        "js": ["content/content.bundle.js"]
    }]
}
